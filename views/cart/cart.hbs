{{>nav}}

<main class="m-3">
	<h1>Carrito</h1>
	<div class="bg-white rounded p-1">
		{{#each cart.items}}
		<div class="grid-cols-2 bg-white -sm p-2 flex justify-between">
			<img src={{this.image}} alt={{this.title}} width="100" height="100">
			<strong>{{this.quantity}}</strong>
			<strong>{{this.title}}</strong>
			<strong>${{this.price}}</strong>
		</div>
		{{/each}}
	</div>
	<h1 class="mt-3">Total: ${{subtotalPrice}}</h1>
	<form action="/checkout" method="post">
		<button type="submit" class="bg-green-600 px-3 py-2 rounded my-3 text-white hover:bg-green-500 ">
			Finalizar compra
		</button>
	</form>
</main>